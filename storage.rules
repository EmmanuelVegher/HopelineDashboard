rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write profile images
    match /profile-images/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Allow authenticated users to read and write driver profile images
    match /driver-profiles/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Allow authenticated users to read and write vehicle images
    match /vehicles/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Allow authenticated users to read and write chat attachments
    match /chat-attachments/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Allow authenticated users to read and write displaced persons images
    match /displaced-persons/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Allow authenticated users to read and write training content
    match /training-content/{allPaths=**} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }
    
    // Allow authenticated users to read and write shelter images and media
    match /shelters/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}