rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rule for the 'shelters' collection
    match /shelters/{shelterId} {
      // ANYONE can read the list of shelters. This is safe because
      // it's public information.
      allow read: if true; 

      // Only authenticated users can update the rating fields.
      allow update: if request.auth != null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['rating', 'ratingCount']);
      
      // NO ONE can write or delete shelters from the app.
      allow create, delete: if false;
    }

    // Rule for the 'users' collection
    match /users/{userId} {
      // Helper function to check if user is a support agent
      function isSupportAgent() {
        return request.auth != null &&
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'support agent';
      }

      // Helper function to check if user is an admin
      function isAdmin() {
        return request.auth != null &&
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
      }

      // Allow read operations - simplified for better reliability
      allow read: if request.auth != null && (
        // Users can always read their own document
        request.auth.uid == userId ||
        // Support agents can read any user document
        isSupportAgent() ||
        // Admins can read any user document
        isAdmin()
      );

      // Allow list/query operations
      allow list: if request.auth != null && (
        // Support agents can query users
        isSupportAgent() ||
        // Admins can query users
        isAdmin() ||
        // Users can query (for finding support agents, etc.)
        true
      );

      // A user can create their own document when they sign up.
      // The new document's ID must match their authentication UID.
      allow create: if request.auth != null && request.auth.uid == userId;

      // A user can only update their OWN data, or admins can update any user.
      allow update: if request.auth != null && (
        request.auth.uid == userId ||
        isAdmin()
      );
    }

    // Rules for the 'sosAlerts' collection
    match /sosAlerts/{alertId} {
      // Allow authenticated users to read all SOS alerts (for admin dashboard)
      allow read: if request.auth != null;

      // Only authenticated users can create SOS alerts
      allow create: if request.auth != null;

      // Allow updates for status changes and team assignments
      allow update: if request.auth != null;
    }

    // Rules for the 'displacedPersons' collection
    match /displacedPersons/{personId} {
      // Allow authenticated users to read displaced persons data (for admin dashboard)
      allow read: if request.auth != null;

      // Only authenticated users can create/update displaced persons records
      allow create, update: if request.auth != null;
    }

    // Rules for the 'drivers' collection
    match /drivers/{driverId} {
      // Allow authenticated users to read driver data (for admin dashboard)
      allow read: if request.auth != null;

      // Only authenticated users can create/update driver records
      allow create, update: if request.auth != null;
    }

    // Rules for the 'ussdCodes' collection
    match /ussdCodes/{codeId} {
      // Allow anyone to read USSD codes (public information)
      allow read: if true;

      // Only authenticated users can create/update USSD codes
      allow create, update: if request.auth != null;
    }

    // Rules for the 'vehicles' collection
    match /vehicles/{vehicleId} {
      // Allow authenticated users to read vehicle data (for admin dashboard)
      allow read: if request.auth != null;

      // Only admins can create/update/delete vehicle records for security
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Consolidated rules for the 'chats' collection
    match /chats/{chatId} {
      // Helper function to check if user is a support agent
      function isSupportAgent() {
        return request.auth != null &&
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'support agent';
      }

      // Allow list/query operations
      allow list: if request.auth != null && (
        // Regular users can query chats where they are participants
        (request.query.filters.size() > 0 &&
         request.query.filters[0].field == 'participants' &&
         request.query.filters[0].op == 'array-contains' &&
         request.query.filters[0].value == request.auth.uid) ||
        // Support agents can query chats assigned to them or all active chats for dashboard
        (isSupportAgent() && (
          // Query assigned chats
          (request.query.filters.size() >= 1 &&
           request.query.filters[0].field == 'agentId' &&
           request.query.filters[0].op == '==' &&
           request.query.filters[0].value == request.auth.uid) ||
          // Query all active chats for dashboard overview
          (request.query.filters.size() >= 1 &&
           request.query.filters[0].field == 'status' &&
           request.query.filters[0].op == '==' &&
           request.query.filters[0].value == 'active')
        ))
      );

      // Allow read/update/delete on a specific chat document if the user is a participant or assigned support agent
      allow read, update, delete: if request.auth != null && (
        request.auth.uid in resource.data.participants ||
        (isSupportAgent() && resource.data.agentId == request.auth.uid) ||
        // Allow support agents to read active chats for dashboard
        (isSupportAgent() && resource.data.status == 'active')
      );

      // Allow a user to create a chat if their UID is in the list of participants
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;

      // Rules for messages subcollection within a chat
      match /messages/{messageId} {
        // Allow read access to messages if the user is a participant of the parent chat or assigned support agent
        allow read: if request.auth != null && (
          get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]) ||
          (isSupportAgent() && get(/databases/$(database)/documents/chats/$(chatId)).data.agentId == request.auth.uid) ||
          // Allow support agents to read messages from active chats
          (isSupportAgent() && get(/databases/$(database)/documents/chats/$(chatId)).data.status == 'active')
        );

        // A user can only create a message if they are authenticated and the senderId in the new message is their own UID
        allow create: if request.auth != null && request.auth.uid == request.resource.data.senderId;

        // Allow updates to messages (for status changes like delivered/read)
        allow update: if request.auth != null && (
          // Users can update their own messages
          request.auth.uid == resource.data.senderId ||
          // Support agents can update messages in chats they're assigned to
          (isSupportAgent() && get(/databases/$(database)/documents/chats/$(chatId)).data.agentId == request.auth.uid) ||
          // Users can update messages in their chats (for status updates)
          get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid])
        );
      }
    }

    // Rules for the 'calls' collection (for voice calls)
    match /calls/{callId} {
      // Helper function to check if user is a support agent
      function isSupportAgent() {
        return request.auth != null &&
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'support agent';
      }

      // Allow support agents to query active calls for dashboard
      allow list: if isSupportAgent() && (
        request.query.filters.size() >= 1 &&
        request.query.filters[0].field == 'status' &&
        request.query.filters[0].op == 'in' &&
        request.query.filters[0].value.hasAny(['ringing', 'active'])
      );

      // Allow read access for support agents
      allow read: if isSupportAgent();

      // Allow support agents to update call status
      allow update: if isSupportAgent();
    }

    // Rules for the 'location_requests' collection
    match /location_requests/{requestId} {
      // Helper function to check if user is a support agent
      function isSupportAgent() {
        return request.auth != null &&
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'support agent';
      }

      // Allow support agents full access to location requests
      allow read, list, write: if isSupportAgent();
    }

    // Rules for the 'emergency_locations' collection
    match /emergency_locations/{emergencyId} {
      // Helper function to check if user is a support agent
      function isSupportAgent() {
        return request.auth != null &&
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'support agent';
      }

      // Allow support agents full access to emergency locations
      allow read, list, write: if isSupportAgent();
    }

    // Rules for the 'notifications' collection
    match /notifications/{notificationId} {
      // Helper function to check if user is a support agent
      function isSupportAgent() {
        return request.auth != null &&
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'support agent';
      }

      // Allow support agents full access to notifications
      allow read, list, write, delete: if isSupportAgent();
    }
  }
}
